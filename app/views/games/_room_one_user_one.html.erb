<div class="d-flex justify-content-center align-items-center h-100 position-relative">
  <div class="scene">
    <%= image_tag "porte_1.png", class: "door-img w-100", height: "400" %>
    <%= image_tag "chandelier_1.png", class: "chandelier-img position-absolute", height: "200" %>
  </div>

  <div class="position-absolute" data-controller="totem-switch game-subscription"
     data-game-subscription-game-id-value="<%= @game.id %>"
     data-totem-switch-advance-path-value="<%= advance_game_path(@game) %>">
    <div class="position-relative">
      <div class="position-absolute frame frame2 d-flex justify-content-center align-items-center">
        <button class="button-green"  data-totem-switch-target="totem" data-action="click->totem-switch#switch"></button>
      </div>
      <div class="position-absolute frame frame1 d-flex justify-content-center align-items-center">
        <button class="button-red"  data-totem-switch-target="totem" data-action="click->totem-switch#switch"></button>
      </div>
      <div class="position-absolute frame frame3 d-flex justify-content-center align-items-center">
        <button class="button-blue"  data-totem-switch-target="totem" data-action="click->totem-switch#switch"></button>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <button class="d-none"
          data-totem-switch-target="door"
          data-game-subscription-target="door"
          data-action="click->totem-switch#unlock"
        >
        </button>
      </div>
    </div>
  </div>
</div>

