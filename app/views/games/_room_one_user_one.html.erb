<div class="d-flex justify-content-center align-items-center h-100 position-relative"
  data-controller="mooving-effect-object"
>
  <div class="marble-floor fade-in-floor-s" data-mooving-effect-object-target="floor">
  </div>

  <div class="scene" >
    <%#     <%= image_tag "porte_1.png", class: "door-img w-100 ", height: "200" %>
    <div class="fade-in-object-n">
      <%= image_tag "chandelier_1.png", class: "chandelier-img position-absolute fade-in-chandelier-n", height: "200", "data-mooving-effect-object-target":"door"%>
    </div>

    <div>
      <div>
        <%= image_tag "porte_1.png", class: "door-img w-100 fade-in-door-n", height: "500" %>
        <%= image_tag "carpet_2.png", class: "carpet2-img position-absolute fade-in-carpet-n", height: "190", "data-mooving-effect-object-target":"carpet"%>
        <%= image_tag "chair_1.png", class: "chair1-img position-absolute fade-in-chair-e", height: "250", "data-mooving-effect-object-target":"carpet"%>
      </div>

      <div class="position-absolute"
        data-controller="status-switch "
        data-status-switch-advance-path-value="<%= advance_game_path(@game) %>"
      >
        <div class="position-relative">
          <div class="position-absolute frame frame2 d-flex justify-content-center align-items-center fade-in-frame1-2-w"  data-mooving-effect-object-target="object">
            <button class="button-green"  data-status-switch-target="totem" data-action="click->status-switch#switch"></button>
          </div>
          <div class="position-absolute frame frame1 d-flex justify-content-center align-items-center fade-in-frame1-2-w" data-mooving-effect-object-target="object">
            <button class="button-red"  data-status-switch-target="totem" data-action="click->status-switch#switch"></button>
          </div>
          <div class="position-absolute frame frame3 d-flex justify-content-center align-items-center fade-in-frame3-e" data-mooving-effect-object-target="object">
            <button class="button-blue"  data-status-switch-target="totem" data-action="click->status-switch#switch"></button>
          </div>
          <div class="d-flex justify-content-center align-items-center">
          <%= image_tag "frame_101.png", class: "position-absolute frame101-img fade-in-frame101-w", height: "90", "data-mooving-effect-object-target":"object" %>
          <%= image_tag "frame_102.png", class: "position-absolute frame102-img fade-in-frame102-e", height: "140", "data-mooving-effect-object-target":"object"  %>
          <%= image_tag "frame_103.png", class: "position-absolute frame103-img fade-in-frame103-w", height: "180", "data-mooving-effect-object-target":"object"  %>
          <%= image_tag "frame_104.png", class: "position-absolute frame104-img fade-in-frame104-e", height: "70", "data-mooving-effect-object-target":"object"  %>
          <%= image_tag "frame_105.png", class: "position-absolute frame105-img fade-in-frame105-e", height: "140", "data-mooving-effect-object-target":"object"  %>

            <div class="d-none"
              data-status-switch-target="door"
              data-game-subscription-target="door"
              data-action="click->status-switch#openDoorOne"
            >
            !
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
